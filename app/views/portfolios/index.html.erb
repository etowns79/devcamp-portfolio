<h1>Portfolio Items</h1>

<%=  link_to "Create New Item", new_portfolio_path  %>
<% @portfolio_items.each do |portfolio| %>
    <h2><%= link_to portfolio.title, portfolio_path(portfolio) %></h2>
    <p><%= portfolio.subtitle %></p>
    <p><%= portfolio.body %></p>
    <%= image_tag portfolio.thumb_image if !portfolio.thumb_image.nil?  %>
    <%= link_to "Edit", edit_portfolio_path(portfolio)  %>
    <%= link_to "Delete", portfolio, method: :delete, data: {confirm: "Are you sure you want to delete #{portfolio.title}?"}%>
<% end %>

